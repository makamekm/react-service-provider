{
  "name": "react-service-provider",
  "version": "1.0.0",
  "description": "React Service Provider",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc -p ./tsconfig.json --sourcemap",
    "commit": "git-cz",
    "format": "prettier --write \"**/*.+(ts|tsx|md|yml|json)\"",
    "lint": "eslint ./src --ext .jsx,.ts,.tsx --ignore-pattern *.test.ts,*.test.tsx",
    "semantic-release": "semantic-release",
    "test:update": "npm test -- --updateSnapshot --coverage",
    "test": "NODE_ENV=test jest --config=jest.config.js  --coverage --forceExit --detectOpenHandles"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/makamekm/react-service-provider.git"
  },
  "keywords": [
    "react",
    "typescript",
    "npm-package",
    "template-project",
    "continuous-integration",
    "skeleton",
    "setup"
  ],
  "author": "Maxim Karpov <makame@mail.ru>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/makamekm/react-service-provider/issues"
  },
  "homepage": "https://github.com/makamekm/react-service-provider#readme",
  "peerDependencies": {
    "react": "^16.8.0",
    "react-dom": "^16.8.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{tsx,ts}": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "@semantic-release/changelog": "^3.0.4",
    "@semantic-release/commit-analyzer": "^6.2.0",
    "@semantic-release/git": "^7.0.16",
    "@semantic-release/npm": "^5.1.13",
    "@semantic-release/release-notes-generator": "^7.2.1",
    "@testing-library/react": "^8.0.7",
    "@types/jest": "^24.0.16",
    "@types/react": "^16.8.23",
    "@typescript-eslint/eslint-plugin": "^2.34.0",
    "@typescript-eslint/parser": "^2.34.0",
    "all-contributors-cli": "^6.8.1",
    "babel-eslint": "^10.1.0",
    "commitizen": "^4.2.1",
    "cz-conventional-changelog": "^3.0.2",
    "eslint": "^6.8.0",
    "eslint-config-react-app": "^5.2.1",
    "eslint-plugin-flowtype": "^4.7.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-react": "^7.20.6",
    "eslint-plugin-react-hooks": "^2.5.1",
    "husky": "^3.0.2",
    "jest": "^24.8.0",
    "lint-staged": "^9.2.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.18.2",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "semantic-release": "^17.1.1",
    "ts-jest": "^24.0.2",
    "typescript": "^3.5.3"
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/changelog",
        {
          "changelogFile": "CHANGELOG.md"
        }
      ],
      "@semantic-release/git",
      "@semantic-release/npm"
    ]
  },
  "czConfig": {
    "path": "node_modules/cz-conventional-changelog"
  }
}
